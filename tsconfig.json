{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "es2019",
      "es2020",
      "esnext"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": ".build",
    "paths": {
      "@db/*": ["./db/*"],
      "@server/*": ["./src/server/*"],
      "@spec/*": ["./spec/*"]
    },
    "sourceMap": true,
    "strict": true
  },
  "include": [
    "./knexfile.ts",
    "./db",
    "./src",
    "./spec"
  ]
}
